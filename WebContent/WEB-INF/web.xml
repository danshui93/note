<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>note</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
	  <error-code>404</error-code>
	  <location>/404/404.jsp</location>
  </error-page>
    <error-page>
	  <error-code>500</error-code>
	  <location>/404/404.jsp</location>
  </error-page>
    <error-page>
	  <error-code>505</error-code>
	  <location>/404/404.jsp</location>
  </error-page>
    <error-page>
	  <error-code>400</error-code>
	  <location>/404/404.jsp</location>
  </error-page>
  
  <filter>
    <filter-name>StaticCache</filter-name>
    <filter-class>com.zf.web.filter.StaticCache</filter-class>
    <init-param>
      <param-name>.jpg</param-name>
      <param-value>2</param-value>
    </init-param>
    <init-param>
      <param-name>.gif</param-name>
      <param-value>2</param-value>
    </init-param>
    <init-param>
      <param-name>.css</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>.js</param-name>
      <param-value>5</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>StaticCache</filter-name>
    <url-pattern>/statics/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>NoCache</filter-name>
    <filter-class>com.zf.web.filter.NoCache</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NoCache</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
</web-app>